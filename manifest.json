{
  "manifest_version": 2,

  "name": "Pineapples!",
  "description": "All about the Pineapples",
  "version": "1.0.2",

  "browser_action": {
    "default_icon": "assets/images/icon.png",
    "default_popup": "views/index.html",
    "default_title": "Pineapples!"
  },

  "commands": {
    "toggle-feature-foo": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle feature foo"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+P",
        "chromeos": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+J"
      }
    }
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs",
    "cookies",
    "<all_urls>"
  ]
}